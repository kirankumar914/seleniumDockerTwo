<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="book-flight-module">

    <test name="flight booking for 1 pax">

        <parameter name="numberOffPax" value="1"/>
        <parameter name="expectedPrice" value="$584 USD"/>

        <classes>
            <class name="com.demoaut.tests.FlightBookingTest"/>
        </classes>

    </test>


    <test name="flight booking for 2 pax">

        <parameter name="numberOffPax" value="2"/>
        <parameter name="expectedPrice" value="$1169 USD"/>

        <classes>
            <class name="com.demoaut.tests.FlightBookingTest"/>
        </classes>

    </test>

    <test name="flight booking for 3 pax">

        <parameter name="numberOffPax" value="3"/>
        <parameter name="expectedPrice" value="$1753 USD"/>

        <classes>
            <class name="com.demoaut.tests.FlightBookingTest"/>
        </classes>

    </test>

    <test name="flight booking for 4 pax">

        <parameter name="numberOffPax" value="4"/>
        <parameter name="expectedPrice" value="$2338 USD"/>

        <classes>
            <class name="com.demoaut.tests.FlightBookingTest"/>
        </classes>

    </test>


</suite>